{
  "name": "@sunny/shared-types",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.mjs",
      "module": "./dist/api/index.mjs",
      "require": "./dist/api/index.js"
    },
    "./user": {
      "types": "./dist/user/index.d.ts",
      "import": "./dist/user/index.mjs",
      "module": "./dist/user/index.mjs",
      "require": "./dist/user/index.js"
    },
    "./payment": {
      "types": "./dist/payment/index.d.ts",
      "import": "./dist/payment/index.mjs",
      "module": "./dist/payment/index.mjs",
      "require": "./dist/payment/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@sunny/eslint-config": "workspace:*",
    "@sunny/tsconfig": "workspace:*",
    "eslint": "^9",
    "tsup": "^8.0.0",
    "typescript": "^5"
  }
}
